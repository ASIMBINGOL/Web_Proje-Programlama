<form method="post" enctype="multipart/form-data" asp-action="Yukle">
    <div>
        <label for="image">Resim Yükle:</label>
        <input type="file" name="image" id="image" />
    </div>
    <div>
        <label for="hairType">Saç Tipi:</label>
        <input type="text" name="hairType" id="hairType" placeholder="Örn: 201" />
    </div>
    <button type="submit">Gönder</button>
</form>

@if (!string.IsNullOrEmpty(ViewBag.ApiResponse))
{
    <h3>API Yanıtı:</h3>
    <pre>@ViewBag.ApiResponse</pre>
}
