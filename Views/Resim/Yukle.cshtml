@model ResimYuklemeModel

<h2>Resim Yükle</h2>

<form asp-action="Yukle" asp-controller="Resim" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Resim">Resim Seçin:</label>
        <input type="file" name="Resim" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Yükle</button>
</form>

<div class="text-danger">
    @TempData["Hata"]
</div>
