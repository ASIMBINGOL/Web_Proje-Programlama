<!DOCTYPE html>
<html lang="en">  <!--Bu müşteri için layout -->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Can Kuaför</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web_Proje.styles.css" asp-append-version="true" />
    <style>
           /* Custom Styles for Barber Shop */
   body {
    font-family: 'Arial', sans-serif;
    background-color: #f8f9fa; /* Light background */
}

.navbar {
    background-color: #343a40; /* Dark header */
}

.navbar-brand, .nav-link {
    color: #f8f9fa !important; /* Light text */
}

.hero-section {
    background: url('https://via.placeholder.com/1920x600') no-repeat center center/cover;
    color: #fff;
    text-align: center;
    padding: 100px 20px;
}

.hero-section h1 {
    font-size: 3rem;
    font-weight: bold;
}

.hero-section p {
    font-size: 1.25rem;
    margin: 20px 0;
}

.hero-section .btn {
    background-color: #e91e63; /* Pink button */
    color: #fff;
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
}

.hero-section .btn:hover {
    background-color: #d81b60;
}

footer {
    background-color: #343a40;
    color: #f8f9fa;
    padding: 10px 0;
    text-align: center;
}

footer a {
    color: #f8f9fa;
}

.services {
    text-align: center;
    margin: 40px 0;
}

.services h2 {
    font-size: 2.5rem;
    margin-bottom: 20px;
}

.services .card {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease-in-out;
}

.services .card:hover {
    transform: translateY(-10px);
}

.welcome-section {
    background: url('https://m.media-amazon.com/images/S/aplus-media-library-service-media/f1d1ace4-d815-4dcc-8a24-06718d2bb893.__CR0,2,1464,625_PT0_SX1464_V1___.jpg) no-repeat center center/cover'; /* Fotoğrafı buraya yerleştiriyoruz */
    color: white; /* Yazıyı beyaz yapıyoruz, resme karşı daha belirgin olması için */
    text-align: center; /* Yazıyı ortaya yerleştiriyoruz */
    padding: 150px 0; /* Üst ve alt kısımdan boşluk bırakıyoruz */
}

.welcome-section h1 {
    font-size: 3rem; /* Yazının büyüklüğünü ayarlıyoruz */
    font-weight: bold; /* Yazıyı kalın yapıyoruz */
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Yazıya gölge ekliyoruz, daha belirgin görünmesini sağlar */
}
    </style>
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Barber Shop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <ul class="navbar-nav ms-auto">
                            @if(User.Identity!.IsAuthenticated){//!null kontrolü
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="CalisanBilgi">Çalışanlarımız</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="navlink">@User.Identity.Name</a>
                            </li>
                             <li class="nav-item">
                                <a href="/LogIn/Logout" class="navlink">Çıkış</a>
                            </li>
                            }
                            else{
                                      <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Musteri" asp-action="Create">Sign Up</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="LogIn" asp-action="Login">Sign In</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="CalisanBilgi">Çalışanlarımız</a>
                        </li>
                            }
                             
                        </ul>
                    </ul>
                </div>
            </div>
        </nav>
    </header>   
     <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
 <footer>
        <div class="container">
            <p>&copy; 2024 Barber Shop. All rights reserved. <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
        </div>
    </footer>

</html>
