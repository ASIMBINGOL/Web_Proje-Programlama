<!DOCTYPE html>
<html lang="en">  <!--Bu müşteri için layout -->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Can Kuaför</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web_Proje.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Barber Shop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <ul class="navbar-nav ms-auto">
                            @if(User.Identity!.IsAuthenticated){//!null kontrolü
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="CalisanBilgi">Çalışanlarımız</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="navlink">@User.Identity.Name</a>
                            </li>
                             <li class="nav-item">
                                <a href="/LogIn/Logout" class="navlink">Çıkış</a>
                            </li>
                            }
                            else{
                                      <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Musteri" asp-action="Create">Sign Up</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="LogIn" asp-action="Login">Sign In</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="CalisanBilgi">Çalışanlarımız</a>
                        </li>
                            }
                             
                        </ul>
                    </ul>
                </div>
            </div>
        </nav>
    </header>   
     <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
 <footer>
        <div class="container">
            <p>&copy; 2024 Barber Shop. All rights reserved. <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
        </div>
    </footer>

</html>
