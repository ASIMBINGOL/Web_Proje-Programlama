@model Web_Proje.Models.Islemler

@{
    ViewData["Title"] = "İşlem Ekle";
}

<h2>İşlem Ekle</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<form asp-action="Ekle" asp-controller="IslemlerConsumeApi" method="post">
    <div class="form-group">
        <label asp-for="IslemAdi" class="control-label"></label>
        <input asp-for="IslemAdi" class="form-control" />
        <span asp-validation-for="IslemAdi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ucret" class="control-label"></label>
        <input asp-for="Ucret" class="form-control" />
        <span asp-validation-for="Ucret" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
